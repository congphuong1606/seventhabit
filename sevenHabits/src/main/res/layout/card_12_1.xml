<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_card"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/mind_card_12_1" />

        <ScrollView
            android:id="@+id/scroll_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/image12_1_1"
                        android:layout_width="65dp"
                        android:layout_height="120dp"
                        android:background="@drawable/mind_card_12_1_1" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp">

                        <RelativeLayout
                            android:id="@+id/re1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView
                                android:id="@+id/image12_1_2"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/mind_card_12_1_2" />

                            <LinearLayout
                                android:id="@+id/line1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/image12_1_2"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/number1"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/number4" />

                                <com.discovertodo.phone.android.util.TextViewWithFont
                                    android:id="@+id/text1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="@string/text_card_12_1"
                                    font:name="MSGothic"
                                    font:textcolor="blue"
                                    font:textsize="nomarl" />

                                <com.discovertodo.phone.android.util.TextViewWithFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/text_card_12_2"
                                    font:name="MSGothic"
                                    font:textcolor="black"
                                    font:textsize="nomarl" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line1"
                                android:layout_marginTop="15dp"
                                android:layout_toRightOf="@+id/image12_1_2"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/number2"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/number3" />

                                <com.discovertodo.phone.android.util.TextViewWithFont
                                    android:id="@+id/text5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="@string/text_card_12_3"
                                    font:name="MSGothic"
                                    font:textcolor="blue"
                                    font:textsize="nomarl" />

                                <com.discovertodo.phone.android.util.TextViewWithFont
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/text_card_12_4"
                                    font:name="MSGothic"
                                    font:textcolor="black"
                                    font:textsize="nomarl" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/re1"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:id="@+id/image12_1_3"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/mind_card_12_1_2" />

                            <LinearLayout
                                android:id="@+id/line3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/image12_1_3"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/number3"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/number2" />

                                <com.discovertodo.phone.android.util.TextViewWithFont
                                    android:id="@+id/text3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="@string/text_card_12_5"
                                    font:name="MSGothic"
                                    font:textcolor="blue"
                                    font:textsize="nomarl" />

                                <com.discovertodo.phone.android.util.TextViewWithFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/text_card_12_6"
                                    font:name="MSGothic"
                                    font:textcolor="black"
                                    font:textsize="nomarl" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line3"
                                android:layout_marginTop="15dp"
                                android:layout_toRightOf="@+id/image12_1_3"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/number4"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/number1" />

                                <com.discovertodo.phone.android.util.TextViewWithFont
                                    android:id="@+id/text4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="@string/text_card_12_7"
                                    font:name="MSGothic"
                                    font:textcolor="blue"
                                    font:textsize="nomarl" />

                                <com.discovertodo.phone.android.util.TextViewWithFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/text_card_12_8"
                                    font:name="MSGothic"
                                    font:textcolor="black"
                                    font:textsize="nomarl" />
                            </LinearLayout>
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/text_card_12_9"
                        font:name="MSGothic"
                        font:textcolor="blue"
                        font:textsize="nomarlxx" />


                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/text_card_12_10"
                        font:name="MSGothic"
                        font:textcolor="blue"
                        font:textsize="nomarlx" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/text_card_12_11"
                        font:name="MSGothic"
                        font:textcolor="black"
                        font:textsize="nomarl" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/text_card_12_12"
                        font:name="MSGothic"
                        font:textcolor="blue"
                        font:textsize="nomarlx" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/text_card_12_13"
                        font:name="MSGothic"
                        font:textcolor="black"
                        font:textsize="nomarl" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/text_card_12_14"
                        font:name="MSGothic"
                        font:textcolor="blue"
                        font:textsize="nomarlx" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/text_card_12_15"
                        font:name="MSGothic"
                        font:textcolor="black"
                        font:textsize="nomarl" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/text_card_12_16"
                        font:name="MSGothic"
                        font:textcolor="blue"
                        font:textsize="nomarlx" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/text_card_12_17"
                        font:name="MSGothic"
                        font:textcolor="black"
                        font:textsize="nomarl" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/text_card_12_18"
                        font:name="MSGothic"
                        font:textcolor="blue"
                        font:textsize="nomarlx" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/text_card_12_19"
                        font:name="MSGothic"
                        font:textcolor="black"
                        font:textsize="nomarl" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>