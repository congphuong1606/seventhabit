<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_card"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/mind_card_13_1" />

        <ScrollView
            android:id="@+id/scroll_13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/text_card_2_1"
                        font:name="MSGothic"
                        font:textcolor="black"
                        font:textsize="nomarl" />

                    <ImageView
                        android:id="@+id/img_card_13_1"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/mind_card_13_1_1" />
                </LinearLayout>

                <com.discovertodo.phone.android.util.TextViewWithFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/text_card_13_1"
                    font:name="MSGothic"
                    font:textcolor="blue"
                    font:textsize="nomarlxx" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_topxx"
                    android:orientation="vertical">

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/text_card_13_2"
                        font:name="MSGothic"
                        font:textcolor="blue"
                        font:textsize="nomarlxx" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/text_card_13_3"
                        font:name="MSGothic"
                        font:textcolor="black"
                        font:textsize="nomarl" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/text_card_13_4"
                        font:name="MSGothic"
                        font:textcolor="blue"
                        font:textsize="nomarlxx" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/text_card_13_5"
                        font:name="MSGothic"
                        font:textcolor="black"
                        font:textsize="nomarl" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/text_card_13_6"
                        font:name="MSGothic"
                        font:textcolor="blue"
                        font:textsize="nomarlxx" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/text_card_13_7"
                        font:name="MSGothic"
                        font:textcolor="black"
                        font:textsize="nomarl" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/text_card_13_8"
                        font:name="MSGothic"
                        font:textcolor="blue"
                        font:textsize="nomarlxx" />

                    <com.discovertodo.phone.android.util.TextViewWithFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/text_card_13_9"
                        font:name="MSGothic"
                        font:textcolor="black"
                        font:textsize="nomarl" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>