<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView 
        android:layout_width="@dimen/drawer_item_icon_width"
    	android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"
    	android:layout_centerVertical="true"
    	android:layout_marginRight="@dimen/margin_smallxx"
    	android:textColor="@color/bluex"
    	android:textSize="@dimen/text_size_largexx"
    	android:text=">" />
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="@dimen/margin_normal"
    	android:layout_marginRight="@dimen/margin_normalxxx"
    	android:orientation="vertical" >
        <TextView 
            android:id="@+id/dailyboosters_all_list_item_time_text"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="@dimen/margin_smallx"
    		android:textColor="@color/bluex"
    		android:textSize="@dimen/text_size_normal"
    		android:text="12-03-2015" />
        <TextView 
            android:id="@+id/dailyboosters_all_list_item_desc_text"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="@dimen/margin_small"
    		android:layout_marginBottom="@dimen/margin_smallx"
			android:singleLine="true"
    		android:textColor="@color/black"
    		android:textSize="@dimen/text_size_normal"
    		android:text="12-03-2015"  />
    </LinearLayout>

</RelativeLayout>
