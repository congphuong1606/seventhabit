<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_smallxxx" >

        <ImageView
            android:id="@+id/popup_setting_choose_session_mtpopup_right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_smallxxx"
            android:layout_marginRight="90dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_mtpopup_white"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ebook_popup_menu_layout"
        android:layout_width="@dimen/ebook_popup_menu_width"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@drawable/bg_popup_while"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small" >

            <ImageView
                android:id="@+id/ebook_popup_menu_brightness_img_small"
                android:layout_width="@dimen/margin_normalx"
                android:layout_height="@dimen/margin_normalx"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_brightness" />

            <ImageView
                android:id="@+id/ebook_popup_menu_brightness_img_huge"
                android:layout_width="@dimen/margin_largexx"
                android:layout_height="@dimen/margin_largexx"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_brightness" />

            <SeekBar
                android:id="@+id/ebook_popup_menu_brightness_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ebook_popup_menu_brightness_img_huge"
                android:layout_toRightOf="@id/ebook_popup_menu_brightness_img_small"
                android:max="20"
                android:progress="10" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ebook_popup_menu_text_btn_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="A"
                android:textColor="@drawable/bg_popup_menu_ebook_text"
                android:textSize="@dimen/text_size_smallxx" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_3" />

            <TextView
                android:id="@+id/ebook_popup_menu_text_btn_huge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_smallx"
                android:text="A"
                android:textColor="@drawable/bg_popup_menu_ebook_text"
                android:textSize="@dimen/text_size_largex" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/gray_3" />

        <LinearLayout
            android:id="@+id/ll_change_font"
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/tv_font"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|left"
                android:text="フォント"
                android:textColor="@drawable/bg_popup_menu_ebook_text"
                android:textSize="@dimen/text_size_smallxx" >
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_detail_item" />

                <TextView
                    android:id="@+id/tv_name_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:textSize="11sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_smallxx" >

            <LinearLayout
                android:id="@+id/ebook_popup_menu_bg_btn_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/margin_largexxx"
                    android:layout_height="@dimen/margin_largexxx"
                    android:src="@drawable/bg_btn_white" />

                <TextView
                    android:id="@+id/ebook_popup_menu_text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白"
                    android:textColor="@color/bluex"
                    android:textSize="@dimen/text_size_smallxx" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ebook_popup_menu_bg_btn_sepia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/margin_largexxx"
                    android:layout_height="@dimen/margin_largexxx"
                    android:src="@drawable/bg_btn_sepia" />

                <TextView
                    android:id="@+id/ebook_popup_menu_text_sepia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="セピア"
                    android:textColor="@color/bluex"
                    android:textSize="@dimen/text_size_smallxx" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ebook_popup_menu_bg_btn_night"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/margin_largexxx"
                    android:layout_height="@dimen/margin_largexxx"
                    android:src="@drawable/bg_btn_night" />

                <TextView
                    android:id="@+id/ebook_popup_menu_text_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜間"
                    android:textColor="@color/bluex"
                    android:textSize="@dimen/text_size_smallxx" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/gray_3" />

        <RelativeLayout
            android:id="@+id/rl_light"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/tv_title_out_night"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="自動夜間テーマ"
                android:textColor="@drawable/bg_popup_menu_ebook_text"
                android:textSize="@dimen/text_size_smallxx" />

            <Switch
                android:id="@+id/sw_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textOff="Off"
                android:textOn="On" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray_3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/tv_title_scroll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="スクロール表示"
                android:textColor="@drawable/bg_popup_menu_ebook_text"
                android:textSize="@dimen/text_size_smallxx" />

            <Switch
                android:id="@+id/sw_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textOff="Off"
                android:textOn="On" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>