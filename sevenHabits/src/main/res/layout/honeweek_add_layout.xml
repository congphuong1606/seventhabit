<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
		    android:layout_width="match_parent"
	    	android:layout_height="@dimen/drawer_item_btnmenu_width"
	    	android:background="@color/bluex"
	    	android:paddingTop="@dimen/margin_tinyx"
	    	android:paddingBottom="@dimen/margin_tinyx" >
	    	
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:paddingLeft="@dimen/margin_normal"
		        android:gravity="center_vertical"
		        android:textColor="@color/white"
		        android:textSize="@dimen/text_size_normal"
		        android:text="キャンセル"
		        android:clickable="true"
		        android:onClick="clickBack" />
	    	
		    <TextView 
            	android:id="@+id/honeweek_add_btn_done"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:paddingLeft="@dimen/margin_normal"
		        android:paddingRight="@dimen/margin_normal"
		        android:gravity="center_vertical"
		        android:layout_alignParentRight="true"
		        android:textColor="@drawable/bg_btn_honeweek_add_done"
		        android:textSize="@dimen/text_size_normal"
		        android:text="保存"
		        android:enabled="false"
		        android:clickable="true"
		        android:onClick="clickDone" />
	    	
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/drawer_item_btnmenu_width"
		        android:layout_marginRight="@dimen/drawer_item_btnmenu_width"
		        android:singleLine="true"
		        android:gravity="center"
		        android:layout_centerInParent="true"
		        android:textSize="@dimen/text_size_normal"
		        android:textColor="@color/white"
		        android:text="「活動」 を追加する" />
		    
		</RelativeLayout>
		
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow" >
		    
        <EditText
            android:id="@+id/honeweek_add_edittext"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/margin_smallxx"
	        android:layout_margin="@dimen/margin_normalxx"
	        android:singleLine="true"
	        android:background="@color/white"
	        android:textColor="@color/black" />
        
    </RelativeLayout>

</LinearLayout>
