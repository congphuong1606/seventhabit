<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_item_btnmenu_width">

        <RelativeLayout
            android:id="@+id/home_layout_top_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_item_btnmenu_width"
            android:background="@color/bluex"
            android:paddingBottom="@dimen/margin_tinyx"
            android:paddingTop="@dimen/margin_tinyx">

            <ImageView
                android:id="@+id/dailyboosters_btn_share"
                android:layout_width="@dimen/drawer_item_btnmenu_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="@dimen/margin_smallx"
                android:src="@drawable/ic_share_to_mail"
                android:visibility="visible" />

            <TextView
                android:id="@+id/honeweek_btn_edit"
                android:layout_width="@dimen/drawer_item_btnmenu_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_smallxx"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/home_btn_menu"
                android:layout_width="@dimen/drawer_item_btnmenu_width"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_smallxxx"
                android:src="@drawable/menu_icon" />

            <TextView
                android:id="@+id/home_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/drawer_item_btnmenu_width"
                android:layout_marginRight="@dimen/drawer_item_btnmenu_width"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_layout_top_ebook_null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_layout_top_ebook"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_item_btnmenu_width"
            android:background="@color/white"
            android:clickable="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/home_btn_menu_ebook"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_normal"
                android:paddingRight="@dimen/margin_normal"
                android:text="ライブラリ"
                android:textColor="@color/bluex"
                android:textSize="@dimen/text_size_smallx" />

            <ImageView
                android:id="@+id/home_btn_ebook_webview_book"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/home_btn_ebook_webview_search"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_bookmark" />

            <ImageView
                android:id="@+id/home_btn_ebook_webview_search"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/home_btn_ebook_webview_book"
                android:background="@drawable/seach" />

            <ImageView
                android:id="@+id/home_btn_ebook_webview_setting"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/home_btn_ebook_webview_search"
                android:layout_toLeftOf="@+id/home_btn_ebook_webview_search"
                android:background="@drawable/ic_change_web_blue" />

            <ImageView
                android:id="@+id/home_btn_ebook_webview_menu"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/home_btn_menu_ebook"
                android:background="@drawable/menu0" />

            <TextView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/home_btn_ebook_webview_menu"
                android:width="30dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="再開"
                android:textColor="@color/bluex"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_layout_top_mindcard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_item_btnmenu_width"
            android:layout_marginLeft="@dimen/margin_smallx"
            android:layout_marginRight="@dimen/margin_smallx"
            android:background="@color/bluex"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btn_back_mincard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_back_finder"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="マインドカード"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/btn_flip_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_transfer"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_layout_top_finder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_item_btnmenu_width"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btn_menu_home_finder"
                android:layout_width="@dimen/drawer_item_btnmenu_width"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_smallxxx"
                android:src="@drawable/menu_icon" />

            <TextView
                android:id="@+id/menu_purpose_mean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/menu_purpose_mean"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_share_finder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/margin_smallxx"
                android:paddingLeft="@dimen/margin_smallxx"
                android:paddingTop="@dimen/margin_smallxx"
                android:src="@drawable/ic_share_to_mail"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_save_finder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/margin_normal"
                android:text="保存"
                android:textColor="@color/white"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/home_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>